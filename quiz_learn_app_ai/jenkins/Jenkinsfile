pipeline {
    agent {
        docker {
            // Use the same image as in your Dockerfile
            image 'cirrusci/flutter:stable'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'flutter pub get'
                sh 'flutter build apk'
            }
        }
        stage('Test') {
            steps {
                // Add your test commands here
            }
        }
        stage('Deploy') {
            steps {
                // Copy the APK to a location accessible to Jenkins
                sh 'mkdir -p $JENKINS_HOME/apks'
                sh 'cp build/app/outputs/flutter-apk/app-release.apk $JENKINS_HOME/apks/myapp-release.apk'
            }
        }
    }
}
