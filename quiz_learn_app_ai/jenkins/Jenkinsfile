pipeline {
    agent {
        docker {
            // Use the Docker image with Flutter and necessary dependencies
            image 'your-custom-flutter-image:latest'
            args '-v $HOME/.pub-cache:/root/.pub-cache' // Optional: Cache pub packages
        }
    }
    
    stages {
        stage('Build') {
            steps {
                sh '''
                    flutter pub get
                    flutter build apk
                '''
            }
        }
    }
    
    post {
        always {
            // Clean up workspace and Docker containers
            cleanWs()
            deleteDir()
        }
    }
}
