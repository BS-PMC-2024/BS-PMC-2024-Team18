pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup Flutter') {
            steps {
                sh '''
                    git clone https://github.com/flutter/flutter.git -b stable
                    export PATH="$PATH:`pwd`/flutter/bin"
                    flutter precache
                    flutter doctor
                '''

                // Install Android SDK
                    sh '''
                        mkdir -p $ANDROID_SDK_ROOT
                        cd $ANDROID_SDK_ROOT
                        wget -q https://dl.google.com/android/repository/commandlinetools-linux-7302050_latest.zip
                        unzip -q commandlinetools-linux-7302050_latest.zip
                        yes | $ANDROID_SDK_ROOT/tools/bin/sdkmanager --sdk_root=$ANDROID_SDK_ROOT "platforms;android-30" "build-tools;30.0.3"
                    '''
            }
        }
        
        stage('Build') {
            steps {
                dir('quiz_learn_app_ai') { // Change 'quiz_learn_app_ai' to your actual project directory name if different
                    sh '''
                        export PATH="$PATH:`pwd`/../flutter/bin"
                        flutter pub get
                        flutter build apk
                    '''
                }
            }
        }
    }
}
