pipeline {
    agent any

    environment {
        FLUTTER_HOME = "${WORKSPACE}/flutter"
        PATH = "${FLUTTER_HOME}/bin:${PATH}"
    }

    stages {
        stage('Setup Flutter') {
            steps {
                sh '''
                    # Check if Flutter directory exists
                    if [ -d "${FLUTTER_HOME}" ]; then
                        echo "Flutter directory already exists. Updating..."
                        cd ${FLUTTER_HOME}
                        git pull
                    else
                        echo "Cloning Flutter repository..."
                        git clone https://github.com/flutter/flutter.git -b stable ${FLUTTER_HOME}
                    fi
                    
                    # Add Flutter to PATH
                    export PATH="$PATH:${FLUTTER_HOME}/bin"
                    
                    # Run flutter doctor to download necessary components
                    flutter doctor
                '''
            }
        }

        stage('Get Dependencies') {
            steps {
                sh '''
                    # Ensure we're in the project directory
                    cd ${WORKSPACE}/quiz_learn_app_ai
                    flutter pub get
                '''
            }
        }

        stage('Analyze') {
            steps {
                sh '''
                    cd ${WORKSPACE}/quiz_learn_app_ai
                    flutter analyze
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                    cd ${WORKSPACE}/quiz_learn_app_ai
                    flutter test
                '''
            }
        }

        stage('Build') {
            steps {
                sh '''
                    cd ${WORKSPACE}/quiz_learn_app_ai
                    flutter build apk
                '''
            }
        }
    }

    post {
        always {
            // Clean up Flutter SDK to save space
            // Commenting this out to preserve Flutter installation between builds
            // sh 'rm -rf ${FLUTTER_HOME}'
        }
    }
}
