pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup Flutter') {
            steps {
                sh '''
                    git clone https://github.com/flutter/flutter.git -b stable
                    export PATH="$PATH:`pwd`/flutter/bin"
                    flutter precache
                    flutter doctor
                '''
            }
        }
        //    stage('Setup Android') {
        //     steps {
           
        //    // Install Android SDK
        //             sh '''
        //                 mkdir -p $androidSdkRoot
        //                 cd $androidSdkRoot
        //                 wget -q https://dl.google.com/android/repository/commandlinetools-linux-7302050_latest.zip
        //                 unzip -q commandlinetools-linux-7302050_latest.zip
        //                 yes | $androidSdkRoot/tools/bin/sdkmanager --sdk_root=$androidSdkRoot "platforms;android-30" "build-tools;30.0.3"
        //             '''

                
        //     }
        // }

        
        stage('Build') {
            steps {
                sh '''
                    export PATH="$PATH:`pwd`/flutter/bin"
                    flutter pub get
                    flutter build apk
                '''
            }
        }
    }
}
