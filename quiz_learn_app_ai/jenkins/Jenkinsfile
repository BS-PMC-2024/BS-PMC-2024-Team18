pipeline {
    agent any

    environment {
        ANDROID_HOME = "${env.WORKSPACE}/android-sdk"
        PATH = "$PATH:${ANDROID_HOME}/cmdline-tools/latest/bin:${ANDROID_HOME}/platform-tools:${ANDROID_HOME}/emulator:${ANDROID_HOME}/tools:${ANDROID_HOME}/tools/bin"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup Flutter') {
            steps {
                sh '''
                    if [ -d "flutter" ]; then
                        rm -rf flutter
                    fi
                    git clone https://github.com/flutter/flutter.git -b stable
                    export PATH="$PATH:`pwd`/flutter/bin"
                    flutter precache
                    flutter doctor
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    apt-get update
                    apt-get install -y wget unzip
                '''
            }
        }
        
        stage('Setup Android SDK') {
            steps {
                sh '''
                    mkdir -p $ANDROID_HOME
                    wget https://dl.google.com/android/repository/commandlinetools-linux-7302050_latest.zip -O cmdline-tools.zip
                    unzip cmdline-tools.zip -d $ANDROID_HOME
                    mkdir -p $ANDROID_HOME/cmdline-tools/latest
                    mv $ANDROID_HOME/cmdline-tools/* $ANDROID_HOME/cmdline-tools/latest
                    yes | sdkmanager --licenses
                    sdkmanager "platform-tools" "platforms;android-30" "build-tools;30.0.3"
                '''
            }
        }
        
        stage('Build') {
            steps {
                dir('quiz_learn_app_ai') { // Change 'quiz_learn_app_ai' to your actual project directory name if different
                    sh '''
                        export PATH="$PATH:`pwd`/../flutter/bin"
                        flutter pub get
                        flutter build apk
                    '''
                }
            }
        }
    }
}
