pipeline {
    agent {
        docker {
            image 'cirrusci/flutter:stable'
            args '-u root:root'  // Run as root to avoid permission issues
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Flutter Doctor') {
            steps {
                sh 'flutter doctor -v'
            }
        }

        stage('Get Dependencies') {
            steps {
                dir('quiz_learn_app_ai') {
                    sh 'flutter pub get'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('quiz_learn_app_ai') {
                    sh 'flutter test'
                }
            }
        }

        stage('Build Android APK') {
            steps {
                dir('quiz_learn_app_ai') {
                    sh 'flutter build apk --release'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'quiz_learn_app_ai/build/app/outputs/flutter-apk/app-release.apk', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
