pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
       



         stage('Setup Flutter') {
            steps {
                sh '''
                    rm -rf flutter  # Remove existing Flutter directory if it exists
                    git clone https://github.com/flutter/flutter.git -b stable
                    export PATH="$PATH:`pwd`/flutter/bin"
                    flutter precache
                    flutter doctor
                '''
            }
        }

       stage('Build') {
            steps {
                dir('BS-PMC-2024-Team18/quiz_learn_app_ai') {
                    sh '''
                        export PATH="$PATH:`pwd`/flutter/bin"
                        flutter pub get
                        flutter build apk
                    '''
                }
            }
        }
    }
}
