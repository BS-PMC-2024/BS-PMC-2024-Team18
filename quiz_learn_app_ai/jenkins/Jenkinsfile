pipeline {
    agent any

    environment {
        FLUTTER_HOME = "${WORKSPACE}/flutter"
        PATH = "${FLUTTER_HOME}/bin:${PATH}"
    }

    stages {
        stage('Setup Flutter') {
            steps {
                sh '''
                    # Download Flutter SDK
                    git clone https://github.com/flutter/flutter.git -b stable ${FLUTTER_HOME}
                    
                    # Add Flutter to PATH
                    export PATH="$PATH:${FLUTTER_HOME}/bin"
                    
                    # Run flutter doctor to download necessary components
                    flutter doctor
                '''
            }
        }

        stage('Get Dependencies') {
            steps {
                sh 'flutter pub get'
            }
        }

        stage('Analyze') {
            steps {
                sh 'flutter analyze'
            }
        }

        stage('Test') {
            steps {
                sh 'flutter test'
            }
        }

        stage('Build') {
            steps {
                sh 'flutter build apk'
            }
        }
    }

    post {
        always {
            // Clean up Flutter SDK to save space
            sh 'rm -rf ${FLUTTER_HOME}'
        }
    }
}
