pipeline {
    agent any
    stages {
          stage('Pull Docker Image') {
            steps {
                script {
                    sh 'docker pull or6562/flutter-builder:latest'
                }
            }
        }
        stage('List Docker Images') {
            steps {
                script {
                    sh 'docker images'
                }
            }
        }
        stage('Flutter Version') {
            steps {
                script {
                    docker.image('or6562/flutter-builder').inside {
                        sh 'flutter --version' // Check Flutter version
                    }
                }
            }
        }
        stage('Flutter Pub Get') {
            steps {
                script {
                    docker.image('or6562/flutter-builder').inside {
                        sh 'flutter pub get' // Run flutter pub get
                    }
                }
            }
        }
        stage('Build APK') {
            steps {
                script {
                    docker.image('or6562/flutter-builder').inside {
                        sh 'flutter build apk' // Build Flutter APK
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
