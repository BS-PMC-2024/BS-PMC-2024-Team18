pipeline {
    agent any

    stages {
        stage('Pull Docker Image') {
            steps {
                script {
                    sh 'docker pull or6562/flutter-builder:latest'
                }
            }
        }
        stage('List Docker Images') {
            steps {
                script {
                    sh 'docker images'
                }
            }
        }
        stage('Flutter Tests') {
            steps {
                script {
                    docker.image('or6562/flutter-builder').inside {
                        // Navigate to your project directory
                        dir('quiz_learn_app_ai') {
                            sh 'flutter pub get'
                            sh 'flutter test'  // Adjust this if your test command is different
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
