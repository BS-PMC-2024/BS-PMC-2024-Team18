pipeline {
    agent {
        docker {
            image 'flutter-builder' // Replace with your Docker image name
            args '-u root:root -v /var/run/docker.sock:/var/run/docker.sock' // Optional: Mount Docker socket and run as root
        }
    }
    stages {
        stage('Pull Image') {
            steps {
                script {
                    // This step is optional since Jenkins pulls the image defined in the agent section
                    docker.image('flutter-builder').pull()
                }
            }
        }
        stage('Flutter Version') {
            steps {
                script {
                    docker.image('flutter-builder').inside {
                        sh 'flutter --version' // Check Flutter version
                    }
                }
            }
        }
        stage('Flutter Pub Get') {
            steps {
                script {
                    docker.image('flutter-builder').inside {
                        sh 'flutter pub get' // Run flutter pub get
                    }
                }
            }
        }
        stage('Build APK') {
            steps {
                script {
                    docker.image('flutter-builder').inside {
                        sh 'flutter build apk' // Build Flutter APK
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
