pipeline {
    agent any

    environment {
        FLUTTER_HOME = "${WORKSPACE}/flutter"
        PATH = "${FLUTTER_HOME}/bin:${PATH}"
    }

    stages {
         stage('Setup Flutter') {
            steps {
                sh '''
                    if [ -d "flutter" ]; then
                        rm -rf flutter
                    fi
                    git clone https://github.com/flutter/flutter.git -b stable
                    export PATH="$PATH:`pwd`/flutter/bin"
                    flutter precache
                    flutter doctor
                '''
            }
        }

        stage('Get Dependencies') {
            steps {
                sh 'flutter pub get'
            }
        }

        stage('Analyze') {
            steps {
                sh 'flutter analyze'
            }
        }

        stage('Test') {
            steps {
                sh 'flutter test'
            }
        }

        stage('Build') {
            steps {
                sh 'flutter build apk'
            }
        }
    }

    post {
        always {
            // Clean up Flutter SDK to save space
            sh 'rm -rf ${FLUTTER_HOME}'
        }
    }
}
