pipeline {
    agent any
    
    environment {
        FLUTTER_HOME = "/usr/local/flutter"
        ANDROID_SDK_ROOT = "/usr/local/android-sdk"
        PATH = "${FLUTTER_HOME}/bin:${ANDROID_SDK_ROOT}/cmdline-tools/tools/bin:${PATH}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Steps to build your Flutter project
                sh 'flutter pub get'
                sh 'flutter build apk'
            }
        }
        
        stage('Test') {
            steps {
                // Steps to run tests if applicable
                echo 'Running tests...'
            }
        }
        
        stage('Deploy') {
            steps {
                // Steps to deploy your APK to a location accessible to Jenkins
                sh 'mkdir -p $JENKINS_HOME/apks'
                sh 'cp build/app/outputs/flutter-apk/app-release.apk $JENKINS_HOME/apks/myapp-release.apk'
            }
        }
    }
}
