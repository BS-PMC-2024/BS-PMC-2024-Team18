pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            agent {
                docker {
                    image 'cirrusci/flutter:stable'
                    args '-u root:root'
                }
            }
            steps {
                dir('quiz_learn_app_ai') {
                    sh 'flutter doctor -v'
                    sh 'flutter pub get'
                    sh 'flutter test'
                    sh 'flutter build apk --release'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'quiz_learn_app_ai/build/app/outputs/flutter-apk/app-release.apk', fingerprint: true
            }
        }
    }

    post {
        always {
            node {
                cleanWs()
            }
        }
    }
}
