pipeline {
    agent any

    stages {
        stage('Pull Docker Image') {
            steps {
                script {
                    sh 'docker pull or6562/flutter-builder:latest'
                }
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm // This will check out your project files from Git
            }
        }

        stage('Flutter Tests') {
            steps {
                script {
                    // Ensure that the working directory is correctly set to the Flutter project directory
                    def projectDir = "/var/jenkins_home/jobs/Team-18/jobs/Pipeline/workspace" // Adjust if needed
                    docker.image('or6562/flutter-builder').inside("-w ${projectDir} -u root:root") {
                        sh 'flutter pub get' // Run flutter pub get inside the Docker container
                        // Add additional Flutter test commands here if needed
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
