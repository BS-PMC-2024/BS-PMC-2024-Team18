pipeline {
    agent any

    stages {
        stage('Pull Docker Image') {
            steps {
                script {
                    sh 'docker pull or6562/flutter-builder:latest'
                }
            }
        }
        stage('List Docker Images') {
            steps {
                script {
                    sh 'docker images'
                }
            }
        }
        stage('Run Flutter Tests') {
            steps {
                script {
                    dir('quiz_learn_app_ai') {
                        // Change to your actual directory name where the Flutter project is
                        docker.image('or6562/flutter-builder').inside {
                            sh 'flutter test' // Run flutter test
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
