pipeline {
    agent any
    
    environment {
        FLUTTER_HOME = "/usr/local/flutter"
        ANDROID_SDK_ROOT = "/usr/local/android-sdk"
        PATH = "${FLUTTER_HOME}/bin:${ANDROID_SDK_ROOT}/cmdline-tools/tools/bin:${PATH}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Flutter and Dependencies') {
            steps {
                script {
                    // Install Flutter
                    sh '''
                        git clone https://github.com/flutter/flutter.git ${FLUTTER_HOME}
                        ${FLUTTER_HOME}/bin/flutter doctor -v
                    '''
                    
                    // Install Android SDK
                    sh '''
                        mkdir -p ${ANDROID_SDK_ROOT}
                        curl -o ${ANDROID_SDK_ROOT}/commandlinetools.zip https://dl.google.com/android/repository/commandlinetools-linux-7583922_latest.zip
                        unzip -q ${ANDROID_SDK_ROOT}/commandlinetools.zip -d ${ANDROID_SDK_ROOT}/cmdline-tools
                        yes | ${ANDROID_SDK_ROOT}/cmdline-tools/tools/bin/sdkmanager --licenses
                        ${ANDROID_SDK_ROOT}/cmdline-tools/tools/bin/sdkmanager "platform-tools" "platforms;android-30" "build-tools;30.0.3"
                    '''
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    // Run Flutter tests
                    sh '''
                        ${FLUTTER_HOME}/bin/flutter pub get
                        ${FLUTTER_HOME}/bin/flutter test
                    '''
                }
            }
        }
        
        stage('Cleanup') {
            steps {
                // Clean up any artifacts or temporary files if needed
                deleteDir()
            }
        }
    }
}
